#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
        label 'master'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    triggers { pollSCM('* * * * *') }
    stages {
        stage("First step") {
            steps {
                sh 'ssh root@zoo2 \'hostname\''
            }
        }
        stage("Second step") {
            steps {
                sh 'ssh root@zoo2 \'uptime\''
            }
        }
        stage("Third step") {
            steps {
                echo "######START######"
                dir ('docker/toolbox') {
                    sh 'docker build .'
                }
            }
        }
    }
}
